@model IEnumerable<LD2_Filmai.Models.Filmas>

@{
    ViewBag.Title = "Filmukai";
}

<h2>Filmukai</h2>

<p>
    @Html.ActionLink("Naujas filmukas", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pavadinimas)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isleidimoMetai)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.trukme)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.zanras)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.pavadinimas)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isleidimoMetai)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.trukme)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.zanras)
        </td>
        <td>
            @Html.ActionLink("Redaguoti", "Edit", new { id = item.id }) |
            @Html.ActionLink("Šalinti", "Delete", new { id = item.id })
        </td>
    </tr>
}
</table>